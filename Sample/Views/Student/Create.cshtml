@model Sample.Models.T_Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



<div class="form-control">
    <h4>T_Student</h4>
    <hr />
    <div class="d-flex">
        <div class="form-group col-md-3">
            <div class="col-md-10">
                <label>Name</label>
                <input type="text" id="Fname" name="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group col-md-3">
            <div class="col-md-10">
                <label>Family</label>
                <input type="text" id="Lname" name="Family" class="form-control" />
            </div>
        </div>
        <div class="form-group col-md-3">
            <div class="col-md-10">
                <label>Mobuke</label>
                <input type="text" id="Mobile" name="Mobile" class="form-control" />
            </div>
        </div>

        <div class="form-group col-md-3">
            <div class="col-md-10">
                <label>Email</label>
                <input type="text" id="Email" name="email" class="form-control" />
            </div>
        </div>
    </div>
    <div class="d-flex mt-4">
        <div class="form-group">
            <div>
                <div>
                    <label>gender</label>
                    <input type="checkbox" id="Gender" name="gender" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-success" onclick="RegesterAjax()">Create</button>
            </div>
        </div>

    </div>

    <div class="mt-5">
        @Html.Action("Index")
    </div>
</div>


@section js{
    <script>
        function RegesterAjax() {
            var Name = $("#Fname").val();
            var Family = $("#Lname").val();
            var Mobile = $("#Mobile").val();
            var Email = $("#Email").val();
            var Gender = $("#Gender").val();

            $.ajax({
                url: '/Student/Create',
                type: 'POST',
                data: { Cname: Name, CFamily: Family, CMobile: Mobile, Cemail: Email, Cgender: Gender },
                success: function () {
                    alert("ok");
                },
                error: function () {
                    alert("Not");
                },

            })

        }

    </script>

}









